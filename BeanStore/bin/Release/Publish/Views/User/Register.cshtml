@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<!-- BREADCRUMB -->
<div id="breadcrumb">
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="@Url.Action("Index", "Bean")">Home</a></li>
            <li class="active">Register</li>
        </ul>
    </div>
</div>
<!-- /BREADCRUMB -->
<!-- section -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-6">
                <div class="billing-details">
                    <p>Already a customer ? <a href="@Url.Action("Login", "User")">Login</a></p>
                    <div class="section-title">
                        <h3 class="title">Your Information</h3>
                        <h4 style="color:orange; text-align:center"> @ViewBag.Notification</h4>
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(true, "sdfds", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="col-md-10">
                                    <input class="input" type="text" name="name" placeholder="Full Name (*)" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <input class="input" type="text" name="email" placeholder="Mail (*)" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <input class="input" type="text" name="phone" placeholder="Number Phone" >
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <input class="input" type="text" name="address" placeholder="Address">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <input class="input" type="text" name="password" placeholder="Password (*)" required>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <p>(*): Can't be null or empty</p>
                        <div class="product-btns">
                            <input type="submit" value="Create Account" class="primary-btn" />
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /section -->