@using BeanStore.Models
@model List<Cart>

@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<!-- section -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <div class="order-summary clearfix">
                    <div class="section-title">
                        <h3 class="title">Oder review</h3>
                    </div>
                    <table class="shopping-cart-table table">
                        <thead>
                            <tr>
                                <th style="width: 15%"></th>
                                <th style="width: 45%"></th>
                                <th style="width: 10%"></th>
                                <th class="text-center" style="width: 15%">Quantity</th>
                                <th class="text-center" style="width: 15%">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                user use = (user)Session["UserAccount"];
                            }
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td class="text-center"><img src="~/images_product/@item.cImage_link" width="100px" height="100px"></td>
                                <td class="details">
                                    <a href="#">@item.cName</a>
                                    <ul>
                                        <li><span>Memory version: ---</span></li>
                                        <li><span>Color: ---</span></li>
                                    </ul>
                                </td>
                                <th></th>
                                <td class="qty text-center" style="font-size:18px">@item.cQuantity</td>
                                <td class="total text-center"><strong class="primary-color">$@item.cAmount</strong></td>
                            </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Customer name</th>
                                <th style="color:#F8694A">@use.name</th>
                                <th style="background-color: white"></th>
                                <th>Total quantity</th>
                                <th colspan="3" class="sub-total" style="color:#F8694A">@ViewBag.totalQuantity</th>
                            </tr>
                            <tr>
                                <th>Address</th>
                                <th style="color:#F8694A">@use.address</th>
                                <th style="background-color: white"></th>
                                <th>Shiping</th>
                                <td colspan="3" style="font-size:16px; color:#F8694A">Free ship</td>
                            </tr>
                            <tr>
                                <th>Number phone</th>
                                <th style="color:#F8694A">@use.phone</th>
                                <th style="background-color: white"></th>
                                <th>Total</th>
                                <th colspan="3" class="total" style="color:#F8694A">$@ViewBag.totalPrice</th>
                            </tr>
                        </tfoot>
                    </table>
                    <div class="pull-right">
                        @using (Html.BeginForm())
                        {<input class="primary-btn" type="Submit" value="Place Order" />}
                    </div>
                    <div class="pull-right">
                        <button class="primary-btn">@Html.ActionLink("Back to cart", "Cart", "Cart")</button>
                    </div>
                    <!---->
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /section -->