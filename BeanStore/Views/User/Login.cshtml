@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<!-- BREADCRUMB -->
<div id="breadcrumb">
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="@Url.Action("Index", "Bean")">Home</a></li>
            <li class="active">Login</li>
        </ul>
    </div>
</div>
<!-- /BREADCRUMB -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-6">
                <div class="billing-details">
                    <p>Do not have an account ? <a href="@Url.Action("Register", "User")">Create an account</a></p>
                    <div class="section-title">
                        <h3 class="title">Your Information</h3>
                        <h4 style="color:orange; text-align:center"> @ViewBag.Notification</h4>
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(true, "sdfds", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="col-md-10">
                                    <input class="input" type="text" name="Email" placeholder="Email (*)" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <input class="input" type="text" name="Pass" placeholder="Password (*)" required>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <p>(*): Can't be null or empty</p>
                        <div class="product-btns">
                            <input type="submit" value="Login" class="btn btn-default" />
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>