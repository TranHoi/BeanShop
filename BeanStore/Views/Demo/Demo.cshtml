@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Message box -->
    <link rel="stylesheet" type="text/css" href="~/Content/Style.messbox.css" />
</head>
<body>
    <button_mess class="buton_mess" onclick="document.getElementById('messbox').style.display='block'" style="width:auto;">Login</button_mess>
    <div id="messbox" class="modal">
        <form class="modal-content animate" action="/action_page.php">
            <div class="imgcontainer_mess">
                <img src="~/images/img_avatar2.png" alt="Avatar" class="avatar_mess">
            </div>
            <div class="container">
                <input type="password" placeholder="Enter Password" name="psw" required>
                <button type="button" onclick="document.getElementById('messbox').style.display='none'">Cancel</button>
            </div>
        </form>
    </div>
    <script>
        // Get the modal
        var modal = document.getElementById('messbox');

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
</body>
</html>
