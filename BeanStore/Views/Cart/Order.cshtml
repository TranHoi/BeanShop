@using BeanStore.Models
@model List<Cart>

@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<!-- section -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <div class="order-summary clearfix">
                    <div class="section-title">
                        <h3 class="title">Oder review</h3>
                    </div>
                    <table class="shopping-cart-table table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th style="width: 400px"></th>
                                <th class="text-center" style="width: 180px">Price</th>
                                <th class="text-center">Quantity</th>
                                <th class="text-center">Total</th>
                                <th style="width: 100px"></th>
                                <th class="text-right"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                user use = (user)Session["UserAccount"];
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="thumb"><img src="~/images_product/@item.cImage_link" alt=""></td>
                                    <td class="details">
                                        <a href="#">@item.cName</a>
                                        <ul>
                                            <li><span>Memory version: ---</span></li>
                                            <li><span>Color: ---</span></li>
                                        </ul>
                                    </td>
                                        <td class="price text-center"><strong>$@item.cPrice</strong></td>
                                        <td class="qty text-center">@item.cQuantity</td>
                                        <td class="total text-center"><strong class="primary-color">$@item.cAmount</strong></td>
                                        <td class="text-center"></td>
                                        <td></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Customer name</th>
                                <th>@use.name</th>
                                <th style="background-color: white"></th>
                                <th>Total quantity</th>
                                <th colspan="3" class="sub-total">@ViewBag.totalQuantity</th>
                            </tr>
                            <tr>
                                <th>Address</th>
                                <th>@use.address</th>
                                <th style="background-color: white"></th>
                                <th>Shiping</th>
                                <td colspan="3">Free ship</td>
                            </tr>
                            <tr>
                                <th>Number phone</th>
                                <th>@use.phone</th>
                                <th style="background-color: white"></th>
                                <th>Total</th>
                                <th colspan="3" class="total">$@ViewBag.totalPrice</th>
                            </tr>
                        </tfoot>
                    </table>
                    <div class="pull-right">
                        @using (Html.BeginForm()) {<input class="primary-btn" type="Submit" value="Place Order" />}
                    </div>
                    <div class="pull-right">
                        <button class="primary-btn">@Html.ActionLink("Back to cart", "Cart", "Cart")</button>
                    </div>
                    <!---->
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /section -->