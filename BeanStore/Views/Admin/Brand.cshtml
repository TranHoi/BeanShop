@model IEnumerable<BeanStore.Models.brand>

@{
    ViewBag.Title = "Brand";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Brand Management</h2>

<p>
    @Html.ActionLink("Inset new brand", "Inset_brand")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.logo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @if (item.logo == null) {
                <p>-</p>
            }
            else {
                <img src="~/images_logo/@item.logo" style="max-width:200px" />
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit_brand", new { id = item.id }) |
            @Html.ActionLink("Delete", "Delete_brand", new { id = item.id })
        </td>
    </tr>
}

</table>
