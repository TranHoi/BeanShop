@model BeanStore.Models.order

@{
    ViewBag.Title = "Delete_order";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="alert">
    <span class="closebtn" onclick="this.parentElement.style.display='none';"><h5 style="padding-top: 0px">ok! I did it</h5></span>
    <strong>Note!</strong> To delete this order, you must delete all order details of this order!
</div>
<h3 style="color:#FF6600">Are you sure you want to delete this user?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Status:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.status.name)
        </dd>
        <dt>
            User:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.user_id)
        </dd>
        <dt>
            Order date:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.order_date)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Order", new { id = Model.status_id })
        </div>
    }
</div>
